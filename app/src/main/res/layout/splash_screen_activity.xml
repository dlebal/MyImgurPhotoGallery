<?xml version="1.0" encoding="utf-8"?>

<!-- Wrapper -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_screen_activity_rlWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.SplashScreenActivity">

    <!-- Powered by -->
    <TextView
        android:id="@+id/splash_screen_activity_tvPoweredBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:text="@string/splash_screen_activity_tvPoweredBy_text"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/splash_screen_activity_tvPoweredBy_textSize" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/splash_screen_activity_ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:cropToPadding="false"
        android:padding="@dimen/splash_screen_activity_ivLogo_padding"
        android:src="@drawable/logo" />

    <!-- Title -->
    <TextView
        android:id="@+id/splash_screen_activity_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/splash_screen_activity_ivLogo"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/splash_screen_activity_tvTitle_textSize" />

</RelativeLayout>
